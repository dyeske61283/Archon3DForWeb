{
  "name": "archon-3d-for-webbrowsers",
  "version": "0.1.0",
  "description": "A project to reimplement the game classic Archon as a 3D Version for Browsers",
  "repository": {
    "type": "git",
    "url": "https://github.com/dyeske61283/Archon3DForWeb.git"
  },
  "author": "Kevin Dyes",
  "license": "MIT",
  "scripts": {
    "createDiagrams": "tsviz -d -r ./src/ ../overview.png && tsviz -d ./src/ ../server.png && tsviz -d ./src/public/js/ ../client.png",
    "start": "npm run serve",
    "build": "npm run build-ts && npm run tslint && npm run copy-static-assets && npm run copy-json && npm run bundle",
    "serve": "node dist/server.js",
    "watch-node": "nodemon dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "test": "jest --forceExit --coverage --verbose",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "copy-static-assets": "ts-node copyStaticAssets.ts",
    "copy-json": "ts-node copyJSON.ts",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "bundle": "browserify src/public/js/main.ts -p [ tsify --noImplicitAny --debug] > dist/public/js/bundle.js",
    "watch-client": "watchify src/public/js/main.ts -p [tsify --noImplicitAny --debug] -o dist/public/js/bundle.js -v"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "bufferutil": "^3.0.5",
    "compression": "^1.7.2",
    "dotenv": "^4.0.0",
    "errorhandler": "^1.5.0",
    "express": "^4.16.3",
    "express-flash": "0.0.2",
    "express-session": "^1.15.6",
    "express-validator": "^4.3.0",
    "lodash": "^4.17.10",
    "morgan": "^1.9.0",
    "npm": "^6.1.0",
    "request": "^2.87.0",
    "socket.io": "^2.1.1",
    "three": "^0.94.0",
    "three-orbitcontrols-ts": "^0.1.2",
    "utf-8-validate": "^4.0.2"
  },
  "devDependencies": {
    "@types/async": "^2.0.49",
    "@types/body-parser": "^1.17.0",
    "@types/bootstrap": "^4.1.2",
    "@types/compression": "0.0.33",
    "@types/dotenv": "^4.0.3",
    "@types/errorhandler": "0.0.32",
    "@types/express": "^4.16.0",
    "@types/express-session": "^1.15.10",
    "@types/jest": "^21.1.10",
    "@types/jquery": "^3.3.4",
    "@types/lodash": "^4.14.111",
    "@types/morgan": "^1.7.32",
    "@types/node": "^7.0.67",
    "@types/request": "^2.47.1",
    "@types/shelljs": "^0.7.9",
    "@types/socket.io": "^1.4.36",
    "@types/socket.io-client": "^1.4.32",
    "@types/supertest": "^2.0.4",
    "@types/three": "^0.92.12",
    "browserify": "^15.2.0",
    "chai": "^4.1.2",
    "concurrently": "^3.6.0",
    "dependency-cruiser": "^4.1.1",
    "jest": "^21.2.1",
    "nodemon": "^1.18.1",
    "shelljs": "^0.7.7",
    "supertest": "^3.1.0",
    "ts-jest": "^21.2.4",
    "ts-node": "^4.1.0",
    "tsify": "^3.0.4",
    "tslint": "^5.10.0",
    "typescript": "^2.9.2",
    "uglify-js": "^3.4.4",
    "watchify": "^3.11.0"
  }
}
